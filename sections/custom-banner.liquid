{% comment %}
  Custom Banner Section
{% endcomment %}

<section class="custom-banner">
  {% assign file = section.settings['banner-desktop-image'] %}
{% if file contains '.svg' %}
  <img src="{{ file | file_url }}" alt="{{ section.settings.heading | escape }}">
{% else %}
  <img src="{{ file | image_url: width: 1600 }}" alt="{{ section.settings.heading | escape }}">
{% endif %}

  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}
</section>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is my custom banner"
    },
    {
      "type": "image_picker",
      "id": "banner-desktop-image",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

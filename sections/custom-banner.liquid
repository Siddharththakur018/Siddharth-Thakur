{% comment %}
  Custom Banner Section
{% endcomment %}
{% if section.settings.sub_heading != blank %}
  <div class="banner-top-section">
    <p>{{ section.settings.sub_heading }}</p>
  </div>
{% endif %}

{% if section.settings[banner-desktop-image] != blank %}
  <div>
    {{ 'banner-desktop-image.svg' | inline_asset_content }}
  </div>
{% endif %}

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "This is my custom banner"
    },
    {
      "type": "image_picker",
      "id": "banner-desktop-image",
      "label": "banner-desktop-image"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
